<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

    <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/pratos"
            android:id="@+id/ivPratos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Prato do Cardápio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrato"
            tools:layout_editor_absoluteY="3dp"
            app:layout_constraintStart_toEndOf="@+id/ivPratos"
            android:layout_marginStart="15dp"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Descrição"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescricao"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/ivPratos"
            app:layout_constraintTop_toBottomOf="@+id/tvPrato" android:layout_marginTop="5dp"/>
    <TextView
            android:text="Chefe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvChefe"
            app:layout_constraintStart_toEndOf="@+id/ivPratos"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescricao" android:layout_marginTop="5dp"/>
    <TextView
            android:text="Data Inclusão"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvData"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/ivPratos"
            app:layout_constraintTop_toBottomOf="@+id/tvChefe" android:layout_marginTop="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>